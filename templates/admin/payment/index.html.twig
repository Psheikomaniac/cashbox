{% extends 'admin/base.html.twig' %}

{% block title %}Payments - Cashbox Admin{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Payments</h1>
        <a href="{{ path('admin_payment_new') }}" class="btn btn-primary">Create New Payment</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Team</th>
                    <th>User</th>
                    <th>Amount</th>
                    <th>Type</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for payment in payments %}
                    <tr>
                        <td>{{ payment.id }}</td>
                        <td>{{ payment.teamUser.team.name }}</td>
                        <td>{{ payment.teamUser.user.name.fullName }}</td>
                        <td>{{ payment.formattedAmount }}</td>
                        <td>{{ payment.type.value }}</td>
                        <td>{{ payment.createdAt|date('Y-m-d H:i') }}</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="{{ path('admin_payment_show', {'id': payment.id}) }}" class="btn btn-sm btn-info">Show</a>
                                <a href="{{ path('admin_payment_edit', {'id': payment.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center">No payments found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
