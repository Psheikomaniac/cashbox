{% extends 'admin/base.html.twig' %}

{% block title %}Edit Payment - Cashbox Admin{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Edit Payment</h1>
        <div>
            <a href="{{ path('admin_payment_list') }}" class="btn btn-secondary">Back to List</a>
            <a href="{{ path('admin_payment_show', {'id': payment.id}) }}" class="btn btn-info">Show</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Payment Form</h5>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                <div class="mb-3">
                    {{ form_label(form.teamUserId) }}
                    {{ form_widget(form.teamUserId, {'attr': {'class': 'form-select' ~ (form.teamUserId.vars.valid ? '' : ' is-invalid')}}) }}
                    {{ form_errors(form.teamUserId) }}
                    {{ form_help(form.teamUserId) }}
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        {{ form_label(form.amount) }}
                        {{ form_widget(form.amount, {'attr': {'class': 'form-control' ~ (form.amount.vars.valid ? '' : ' is-invalid')}}) }}
                        {{ form_errors(form.amount) }}
                        {{ form_help(form.amount) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.currency) }}
                        {{ form_widget(form.currency, {'attr': {'class': 'form-select' ~ (form.currency.vars.valid ? '' : ' is-invalid')}}) }}
                        {{ form_errors(form.currency) }}
                        {{ form_help(form.currency) }}
                    </div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.type) }}
                    {{ form_widget(form.type, {'attr': {'class': 'form-select' ~ (form.type.vars.valid ? '' : ' is-invalid')}}) }}
                    {{ form_errors(form.type) }}
                    {{ form_help(form.type) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control' ~ (form.description.vars.valid ? '' : ' is-invalid')}}) }}
                    {{ form_errors(form.description) }}
                    {{ form_help(form.description) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.reference) }}
                    {{ form_widget(form.reference, {'attr': {'class': 'form-control' ~ (form.reference.vars.valid ? '' : ' is-invalid')}}) }}
                    {{ form_errors(form.reference) }}
                    {{ form_help(form.reference) }}
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary">Update Payment</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
