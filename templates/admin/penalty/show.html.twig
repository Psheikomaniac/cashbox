{% extends 'admin/base.html.twig' %}

{% block title %}Penalty Details - Cashbox Admin{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Penalty Details</h1>
        <div>
            <a href="{{ path('admin_penalty_list') }}" class="btn btn-secondary">Back to List</a>
            <a href="{{ path('admin_penalty_edit', {'id': penalty.id}) }}" class="btn btn-warning">Edit</a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">Penalty Information</h5>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th style="width: 200px;">ID</th>
                        <td>{{ penalty.id }}</td>
                    </tr>
                    <tr>
                        <th>Team</th>
                        <td>{{ penalty.teamUser.team.name }}</td>
                    </tr>
                    <tr>
                        <th>User</th>
                        <td>{{ penalty.teamUser.user.name.fullName }}</td>
                    </tr>
                    <tr>
                        <th>Type</th>
                        <td>{{ penalty.type.name }}</td>
                    </tr>
                    <tr>
                        <th>Reason</th>
                        <td>{{ penalty.reason }}</td>
                    </tr>
                    <tr>
                        <th>Amount</th>
                        <td>{{ penalty.currency.formatAmount(penalty.amount) }}</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>
                            {% if penalty.paidAt %}
                                <span class="badge bg-success">Paid</span>
                            {% else %}
                                <span class="badge bg-danger">Unpaid</span>
                            {% endif %}
                            {% if penalty.archived %}
                                <span class="badge bg-secondary">Archived</span>
                            {% else %}
                                <span class="badge bg-primary">Active</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Paid At</th>
                        <td>{{ penalty.paidAt ? penalty.paidAt|date('Y-m-d H:i:s') : 'Not paid yet' }}</td>
                    </tr>
                    <tr>
                        <th>Created At</th>
                        <td>{{ penalty.createdAt|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th>Updated At</th>
                        <td>{{ penalty.updatedAt|date('Y-m-d H:i:s') }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Payment Status</h5>
                </div>
                <div class="card-body">
                    {% if not penalty.paidAt %}
                        <form method="post" action="{{ path('admin_penalty_pay', {'id': penalty.id}) }}" onsubmit="return confirm('Mark this penalty as paid?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('pay' ~ penalty.id) }}">
                            <button class="btn btn-success">Mark as Paid</button>
                        </form>
                    {% else %}
                        <p class="text-success mb-0">This penalty was paid on {{ penalty.paidAt|date('Y-m-d H:i:s') }}</p>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="card-title mb-0">Archive Status</h5>
                </div>
                <div class="card-body">
                    {% if not penalty.archived %}
                        <form method="post" action="{{ path('admin_penalty_archive', {'id': penalty.id}) }}" onsubmit="return confirm('Archive this penalty?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('archive' ~ penalty.id) }}">
                            <button class="btn btn-secondary">Archive Penalty</button>
                        </form>
                    {% else %}
                        <p class="text-secondary mb-0">This penalty is archived</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5 class="card-title mb-0">Danger Zone</h5>
        </div>
        <div class="card-body">
            <form method="post" action="{{ path('admin_penalty_delete', {'id': penalty.id}) }}" onsubmit="return confirm('Are you sure you want to delete this penalty?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ penalty.id) }}">
                <button class="btn btn-danger">Delete Penalty</button>
            </form>
        </div>
    </div>
{% endblock %}
