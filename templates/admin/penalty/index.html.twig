{% extends 'admin/base.html.twig' %}

{% block title %}Penalties - Cashbox Admin{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Penalties</h1>
        <a href="{{ path('admin_penalty_new') }}" class="btn btn-primary">Create New Penalty</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Team</th>
                    <th>User</th>
                    <th>Type</th>
                    <th>Amount</th>
                    <th>Paid</th>
                    <th>Archived</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for penalty in penalties %}
                    <tr>
                        <td>{{ penalty.id }}</td>
                        <td>{{ penalty.teamUser.team.name }}</td>
                        <td>{{ penalty.teamUser.user.name.fullName }}</td>
                        <td>{{ penalty.type.name }}</td>
                        <td>{{ penalty.currency.formatAmount(penalty.amount) }}</td>
                        <td>
                            {% if penalty.paidAt %}
                                <span class="badge bg-success">Paid</span>
                            {% else %}
                                <span class="badge bg-danger">Unpaid</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if penalty.archived %}
                                <span class="badge bg-secondary">Archived</span>
                            {% else %}
                                <span class="badge bg-primary">Active</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="{{ path('admin_penalty_show', {'id': penalty.id}) }}" class="btn btn-sm btn-info">Show</a>
                                <a href="{{ path('admin_penalty_edit', {'id': penalty.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center">No penalties found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
